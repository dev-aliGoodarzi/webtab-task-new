{
  "swagger": "2.0",
  "info": {
    "title": "Self-Blog",
    "version": "1.0.0"
  },
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "// COMMENT_AUTH_START": {},
    "/demo/v1/auth-login": {
      "post": {
        "summary": "POST Admin Data (Email & Password) for Login",
        "operationId": "Login-Admin",
        "parameters": [
          {
            "in": "body",
            "name": "loginData",
            "required": true,
            "schema": {
              "$ref": "#/definitions/loginPostData"
            }
          },
          {
            "in": "header",
            "name": "language",
            "required": false,
            "schema": {
              "language": "fa | en"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User authenticated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string",
                  "example": "22"
                }
              }
            }
          }
        },
        "tags": ["Auth"]
      }
    },
    "/demo/v1/auth-register": {
      "post": {
        "summary": "POST Admin Data (Email & Password) for Register",
        "operationId": "Register-Admin",
        "parameters": [
          {
            "in": "body",
            "name": "loginData",
            "required": true,
            "schema": {
              "$ref": "#/definitions/loginPostData"
            }
          },
          {
            "in": "header",
            "name": "language",
            "required": false,
            "schema": {
              "language": "fa | en"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "string",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string",
                  "example": "successful"
                }
              }
            }
          }
        },
        "tags": ["Auth"]
      }
    },
    "// COMMENT_AUTH_END": {},
    "/demo/v1/bpmn-file": {
      "get": {
        "tags": ["BPMN File"],
        "security": [
          {
            "SimpleAuth": []
          }
        ],
        "parameters": [
          {
            "in": "header",
            "name": "language",
            "required": false,
            "type": "string",
            "description": "we have 2 language --- send  fa | en to get one of them and use it ;)"
          },
          {
            "in": "query",
            "name": "fileId",
            "required": true,
            "type": "string",
            "description": "we have 2 file --- send  1 | 2 to get one of them and use it ;)"
          }
        ],
        "responses": {
          "200": {
            "description": "the file will return in here => the file schema is JSON"
          }
        }
      }
    },
    "/demo/v1/formio-file": {
      "get": {
        "tags": ["Form-io File"],
        "security": [
          {
            "SimpleAuth": []
          }
        ],
        "parameters": [
          {
            "in": "header",
            "name": "language",
            "required": false,
            "type": "string",
            "description": "we have 2 language --- send  fa | en to get one of them and use it ;)"
          },
          {
            "in": "query",
            "name": "fileId",
            "required": true,
            "type": "string",
            "description": "we have 2 file --- send  1 | 2 to get one of them and use it ;)"
          }
        ],
        "responses": {
          "200": {
            "description": "the file will return in here => the file schema is JSON"
          }
        }
      }
    }
  },
  "definitions": {
    "loginPostData": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "me74242@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "Ali1379@"
        }
      },
      "required": ["email", "password"]
    },
    "registerPostData": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "me74242@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "Ali1379@"
        }
      },
      "required": ["email", "password"]
    }
  },
  "securityDefinitions": {
    "SimpleAuth": {
      "type": "apiKey",
      "name": "token",
      "in": "header",
      "description": "Place Your Token here => WITHOUT Bearer"
    }
  }
}
